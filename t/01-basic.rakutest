use Test;
use GraphicsMagick;

my $res;
my @lines; 
my $pic = "resources/tbrowder.jpg";

lives-ok { 
    $res = run('raku', '-Ilib', './bin/crop', :out).out.slurp;
    for $res.lines -> $line {
        next if $line !~~ /\S/;
        like $line, /^ Usage ': ' /;
        last;
    }
}

lives-ok { 
    $res = run('raku', '-Ilib', "./bin/crop", "show", "$pic", :out).out.slurp 
}

done-testing;
